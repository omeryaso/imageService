@model List<ImageServiceWeb.Models.Photo>

@{
    ViewBag.Title = "Photos";
}

<h2>Photos</h2>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="column">
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="@item.t_RelativePath" class="img-circle" alt="@item.PicName">
                    <div class="caption">
                        <h3>@item.PicName</h3>
                        <p>Date taken: @item.DateTaken</p>
                        <form method="post">
                            <input type="submit" class="btn btn-primary" value="View" formaction="PicView"
                                   style="background-color:blue;color:white" />
                            <input type="submit" class="btn btn-default" value="Delete" formaction="DeletePicView"
                                   style="background-color:red;color:white" />
                            <input type="text" name="path" value="@item.t_FullPath" hidden="hidden" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>