@model IEnumerable<ImageServiceWeb.Models.Photo>
@{
    ViewBag.Title = "Photos";
}
<h2>Photos</h2>
<div class="container">
    <div class="row">
        @foreach (var photo in Model)
        {
        <div class="col-md-3 col-sm-4 col-lg-3" style="border:2px solid lightblue; margin:5px;padding:10px;max-height:350px;height:430px;max-width:260px">
            
                <img src="@Url.Content(photo.ImageRelativePath)" alt="" class="img-circle" width="240" height="200" >
                <div class="caption">
                    <h4>@photo.Name</h4>
                    <p>@photo.Month @photo.Year</p>
                    <p>
                        <a href="@Url.Action("PhotosViewer", new { photoRelPath = photo.ImageRelativePath})" id="bView" class="btn btn-info btn-xs" role="button">View</a>
                        <a href="@Url.Action("DeletePhoto", new { photoRelPath = photo.ImageRelativePath})" id="bDelete" class="btn btn-danger btn-xs" role="button">Delete</a>
                    </p>
                </div>
            </div>
        }
    </div>
</div>
