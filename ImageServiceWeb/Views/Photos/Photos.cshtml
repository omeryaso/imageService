@model IEnumerable<ImageServiceWeb.Models.Photo>
@{
    ViewBag.Title = "Photos";
}
<h2>Photos</h2>
<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
        <div class="col-md-3 col-sm-4 col-lg-3" style="border:1px solid lightblue; margin:5px;padding:10px;max-width:260px;max-height:600px;height:450px; flex-grow:100">
            
                <img src="@Url.Content(item.ImageRelativePath)" alt="" class="img-circle" width="242" height="200" >
                <div class="caption">
                    <h4>@item.Name</h4>
                    <p>year: @item.Year Month:@item.Month</p>
                    <p>
                        <a href="@Url.Action("PhotosViewer", new { photoRelPath = item.ImageRelativePath})" id="btnView" class="btn btn-info btn-xs" role="button">View</a>
                        <a href="@Url.Action("DeletePhoto", new { photoRelPath = item.ImageRelativePath})" id="btnDelete" class="btn btn-danger btn-xs" role="button">Delete</a>
                    </p>
                </div>
            </div>
        }
    </div>
</div>
@*// photoPath = item.ImageRelativePath, photoThumbnailPath = item.ImageRelativePathThumbnail*@
