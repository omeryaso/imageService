@using ImageServiceWeb.Models;

@model IEnumerable<ImageServiceWeb.Models.LogCollection.Log>

@{
    ViewBag.Title = "Logs";
}

<h2>Logs</h2>

<div>
    @using (Html.BeginForm("Logs", "Logs", FormMethod.Post))
    {
    <div>
        @Html.DropDownList("typeFilter",new SelectList(Enum.GetValues(typeof(ImageServiceWeb.Models.LogCollection.Type))),
        "Logs type",new { @class = "form-control" })
    </div>
    <br />
        <input type="submit" id="submitId" value="Filter" class="btn-info" />
        }
</div>

<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Message)
        </th>
    </tr>

    @foreach (var log in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => log.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => log.Message)
            </td>
        </tr>
    }

</table>
